    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "author": "Ivan Saklov <ivansaklov@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.13",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "http-proxy-middleware": "^2.0.6",
    "nodemon": "^2.0.15"
  }
}
